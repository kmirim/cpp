SRC = ClapTrap.cpp main.cpp ScavTrap.cpp FragTrap.cpp
OBJS = $(SRC:.cpp=.o)
CXX = c++ 
CXXFLAGS = -Wall -Wextra -Werror -g
NAME = fragtrap

all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJS)
	@echo "\033[1;32müöÄ $(NAME) compiled successfully!\033[0m"

%.o:%.cpp
	@echo "\033[1;32m‚öôÔ∏è  Compiling $<...\033[0m"
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	@echo "\033[1;31müßπ Cleaning object files...\033[0m"
	$(RM) $(OBJS)
	@echo "\033[1;91müóëÔ∏è  Object files deleted! üíÄ\033[0m"

fclean: clean
	@echo "\033[1;31müí• Removing $(NAME)...\033[0m"
	$(RM) $(NAME)
	@echo "\033[1;91müî• $(NAME) completely deleted! ‚ò†Ô∏è\033[0m"
re: fclean all